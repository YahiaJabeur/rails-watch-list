<div class="hero-header mb-5" style="background-image: url('<%= asset_path 'cinema.webp' %>'); background-size: cover; background-position: center;">
  <div class="container py-5 text-center text-white">
    <h1 class="display-4 fw-bold mb-3 text-shadow">CinemaList</h1>
    <p class="lead text-shadow">Curate Your Perfect Movie Collection</p>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2>My Lists</h2>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <%= link_to "View list", list_path(list), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>