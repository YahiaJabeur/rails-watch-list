<div class="container py-5">
  <h1>Add a movie to <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, 
        collection: Movie.all, 
        prompt: "Select a movie", 
        label: "Movie",
        input_html: { class: "form-select" } 
    %>
    <%= f.input :comment, 
        placeholder: "Enter a comment (minimum 6 characters)", 
        input_html: { class: "form-control" } 
    %>
    <%= f.submit "Add movie to list", class: "btn btn-primary mt-3" %>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back to list", list_path(@list), class: "btn btn-outline-secondary" %>
  </div>
</div>